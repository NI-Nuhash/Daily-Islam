<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeatureList">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/al_quran"
        android:layout_margin="30dp"
      />
    <Button
        android:id="@+id/QuranicVerses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quranic Verses"
        android:backgroundTint="#4CAF50"
      />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/hadith"
        android:layout_margin="30dp"
        />
    <Button
        android:id="@+id/HadithQuotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hadith Quotes"
        android:backgroundTint="#4CAF50"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/daily_dua"
        android:layout_margin="30dp"
        />
    <Button
        android:id="@+id/DailyDuas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Duas"
        android:backgroundTint="#4CAF50"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/tasbih"
        android:layout_margin="30dp"
        />
    <Button
        android:id="@+id/DTasbih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digital Tasbih"
        android:backgroundTint="#4CAF50"
        />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/zakat"
        android:layout_margin="30dp"
        />
    <Button
        android:id="@+id/ZakatCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zakat Calculator"
        android:backgroundTint="#4CAF50"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/quran_recitation"
        android:layout_margin="30dp"
        />
    <Button
        android:id="@+id/TelawatAndNasheed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telawat And Nasheed"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#4CAF50"
        />


  </LinearLayout>




  </ScrollView>